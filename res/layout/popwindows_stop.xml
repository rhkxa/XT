<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/popwindows_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="8dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/popwindows_interval"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="时长:"
                        android:textColor="@color/text"
                        android:textSize="@dimen/caption" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:id="@+id/popwindows_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="时间:"
                            android:textColor="@color/text"
                            android:textSize="@dimen/caption"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/popwindows_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="时间:2015-11-11 19:00:00"
                            android:textColor="@color/text"
                            android:textSize="@dimen/caption" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/popwindows_layout"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="位置:"
                            android:textColor="@color/text"
                            android:textSize="@dimen/caption"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/popwindows_position"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="16dp"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="位置:沧州市新华路1890987668889号 "
                            android:textColor="@color/text"
                            android:textSize="@dimen/caption" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/triangle_top" />

</LinearLayout>